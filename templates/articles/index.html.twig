{% extends 'base.html.twig' %}

    {% block title %}articles{% endblock %}
    {% block stylesheets %}
        <link rel="stylesheet" href="https://bootswatch.com/4/cosmo/bootstrap.min.css">
    {% endblock %}


{% block body %}
<h1 class="ml-2">Articles</h1>

    
    {% if articles %}
        <table class="table table-striped">
            <thead><tr>
                <th>    article title</th>
                <th>actions</th>
            </tr></thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article }}</td>
                    <td>
                        <a href="/article/1" class="btn btn-dark">Read</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        
        
    {% endif %}
{% endblock %}
